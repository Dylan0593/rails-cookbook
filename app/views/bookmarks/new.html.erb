
<div class = "form-new mt-5">

<h1>Add a recipe to <%= @category.name %> category</h1>

<%= simple_form_for [@category,@bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :recipe %>
  <div class= "form-buttons d-flex justify-content-between align-items-end mt-3">

 <%= f.submit 'Add recipe', class: "btn btn-info"%>
<% end %>
 <%= link_to "back to #{@category.name}", category_path(@category)%>
</div>

  </div>
